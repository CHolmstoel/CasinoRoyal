@model CasinoRoyal.Data.Entity.Guest

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br/>
<h3>Edit Information</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="GuestID" />
            <div>
                <label>Room Number </label>
                @Html.DisplayFor(model => model.HotelRoom.HotelRoomID)
                <span asp-validation-for="HotelRoom" class="text-danger"></span>
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GuestType" class="control-label"></label>
                <select asp-for="GuestType">
                    <option value="Adult">Adult</option>
                    <option value="Child">Child</option>
                </select>
                @*<input asp-for="GuestType" class="form-control" />*@
                <span asp-validation-for="GuestType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GuestIndex">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<a asp-controller="Receptionist" asp-action="GuestIndex">
    <img src="~/Images/back-button.png" width="50" />
</a>