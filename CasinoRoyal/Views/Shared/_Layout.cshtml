@{
    var isWaiter = false;
    if (User.HasClaim("Waiter", "IsWaiter"))
    {
        isWaiter = true;
    }

    var isReceptionist = false;
    if (User.HasClaim("Receptionist", "IsReceptionist"))
    {
        isReceptionist = true;
    }

    var isKitchenstaff = false;
    if (User.HasClaim("KitchenStaff", "IsKitchenStaff"))
    {
        isKitchenstaff = true;
    }
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CasinoRoyal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-wrapper navbar-expand-sm navbar-dark bg-opacity-green border-bottom box-shadow mb-3" id="stickyheader">
            <div class="container">
                <a href='@Url.Action("Index", "Home")' >
                    <img src='~/Images/logo-small.png' />
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between text-khaki">
                    <ul class="navbar-nav flex-grow-1 navbar-dark">
                        @if(isKitchenstaff)
                        { 
                            <li class="nav-item">
                                <a class="nav-link text-warning" asp-area="" asp-controller="KitchenStaff" asp-action="Index">Kitchen View</a>
                            </li>
                        }
                        @if (isReceptionist)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-warning" asp-area="" asp-controller="Receptionist" asp-action="Index">Receptionist View</a>
                            </li>
                        }
                        @if (isWaiter) // commented out during testing
                        {
                            <li class="nav-item">
                                <a class="nav-link text-warning" asp-area="" asp-controller="Waiter" asp-action="Index">Waiter View</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top text-warning footer text-muted bg-opacity-green-footer" >
        <div class="container text-warning" id="FooterAdd">
            Copyright &copy; 2021 - CasinoRoyal A/S - The Place To Stay
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
