@model IEnumerable<CasinoRoyal.Data.Entity.Guest>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>All guests at the hotel </h1>

<p>
    <input type="button" class="btn btn-primary" value="Check in new guest" onclick="location.href='@Url.Action("Create", "Guests")'" />
</p>
<table class="table" >
    <thead >
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HotelRoom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsCheckedIn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HasEatenBreakfast)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BreakfastReservationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GuestType)
            </th>
            <th>
                @Html.Display("Actions")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody >
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.HotelRoom.HotelRoomID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsCheckedIn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HasEatenBreakfast)
            </td>
            <td>
                @{
                    if (item.BreakfastReservationDate == DateTime.MinValue)
                    {
                        @Html.Label("Not Reserved")
                        ;
                    }
                    else
                    {
                        @Html.DisplayFor(modelItem => item.BreakfastReservationDate)
                    }
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GuestType)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.GuestID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.GuestID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.GuestID" id="CheckoutColor">Check out</a>
            </td>
        </tr>
}
    </tbody>
</table>
